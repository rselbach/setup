{
  "vim_mode": false,
  "buffer_font_size": 12,
  "buffer_font_family": "Fira Code",
  "buffer_font_fallbacks": [
    "Menlo",
    "Monaco",
    "Courier New"
  ],
  "ui_font_family": "Fira Code",
  "ui_font_fallbacks": [
    "Menlo",
    "Monaco",
    "Courier New"
  ],
  "ui_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "One Dark - Darkened",
    "dark": "rselbach"
  },
  "show_completions_on_input": true,
  "edit_predictions": {
    "mode": "subtle"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "show_edit_predictions": true,
